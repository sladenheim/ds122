        "from IPython.core.display import HTML\n",
        "\n",
        "def generate_html():\n",
        "    return r\"\"\"\n",
        "    <div class=\"blue-box\">\n",
        "        <p>\n",
        "    Given the code below. What is the final answer for the umbrella problem?\n",
        "        </p>\n",
        "    </div>\n",
        "    \"\"\"\n",
        "html_content = generate_html()\n",
        "display(HTML(html_content))"
